@model IEnumerable<CNPMLyThuyet.Model.PhongBan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PhongBanLayout.cshtml";
}

<div style="margin:10px auto;width:70%;">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
                Mã phòng ban
            </th>
            <th>
                Tên phòng ban
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaPB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenPB)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaPB }, new
                    {
 @class = "btn btn-success"
                    }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaPB },
                   new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaPB }, new
                    {
                   @class = "btn btn-danger"
                    })
                </td>
            </tr>
        }

    </table>

</div>
